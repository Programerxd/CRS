---
// Importamos los estilos globales que configuramos antes
import '../styles/global.css';
import UserMenu from '../components/UserMenu';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Cuervo Rosa Studio - Arte corporal seguro y personalizado." } = Astro.props;

// Links de navegación según el PDF y capturas
const links = [
  { name: "Inicio", href: "/" },
  { name: "Productos", href: "/productos" },
  { name: "Servicios", href: "/servicios" },
  { name: "Portafolio", href: "/portafolio" },
  { name: "Artistas", href: "/artistas" },
  { name: "Contacto", href: "/contacto" },
];
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Montserrat:wght@500;600;700;800&display=swap" rel="stylesheet">

    <title>{title}</title>
  </head>
  
  <body class="flex flex-col min-h-screen bg-white text-dark-600">
    
    <header class="sticky top-0 z-50 bg-white/90 backdrop-blur-md border-b border-gray-100 shadow-sm">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-20">
          
          <a href="/" class="font-heading font-extrabold text-2xl text-primary tracking-tight">
            Cuervo Rosa Studio
          </a>

          <nav class="hidden md:flex space-x-8">
            {links.map((link) => (
              <a href={link.href} class="text-sm font-medium text-dark-600 hover:text-primary transition-colors font-heading uppercase tracking-wide">
                {link.name}
              </a>
            ))}
          </nav>

          <div class="hidden md:flex items-center space-x-4">
            <UserMenu client:only="react" />
            <a href="/agendar" class="bg-primary hover:bg-primary-hover text-white px-5 py-2.5 rounded-full text-sm font-bold shadow-lg transition-all transform hover:scale-105">
              Agendar Cita
            </a>
          </div>

          <button class="md:hidden text-dark-900 focus:outline-none">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </div>
    </header>

    <main class="flex-grow">
      <slot />
    </main>

    <footer class="bg-white border-t border-gray-100 pt-16 pb-8">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-12 mb-12">
          
          <div class="col-span-1 md:col-span-1">
            <span class="font-heading font-extrabold text-xl text-primary mb-4 block">Cuervo Rosa Studio</span>
            <p class="text-sm text-gray-500 leading-relaxed">
              Arte corporal seguro y personalizado. Transformamos ideas en arte con los más altos estándares de higiene.
            </p>
          </div>

          <div>
            <h3 class="font-heading font-bold text-dark-900 mb-4 uppercase text-sm">Navegación</h3>
            <ul class="space-y-3 text-sm">
              <li><a href="/" class="hover:text-primary transition-colors">Inicio</a></li>
              <li><a href="/portafolio" class="hover:text-primary transition-colors">Portafolio</a></li>
              <li><a href="/servicios" class="hover:text-primary transition-colors">Servicios</a></li>
              <li><a href="/artistas" class="hover:text-primary transition-colors">Artistas</a></li>
            </ul>
          </div>

          <div>
            <h3 class="font-heading font-bold text-dark-900 mb-4 uppercase text-sm">Contacto</h3>
            <ul class="space-y-3 text-sm text-gray-500">
              <li>Oxkutzcab, Yucatán</li>
              <li>Tel: +52 997 123 4567</li>
              <li>info@cuervorosa.studio</li>
              <li>Lun - Sáb: 11:00 - 20:00</li>
            </ul>
          </div>

           <div>
            <h3 class="font-heading font-bold text-dark-900 mb-4 uppercase text-sm">Conéctate</h3>
            <p class="text-sm text-gray-500 mb-4">@CuervoRosaStudio</p>
            <div class="flex space-x-4">
              <div class="w-8 h-8 bg-gray-100 rounded-full flex items-center justify-center text-dark-900 hover:bg-primary hover:text-white transition-colors cursor-pointer">IG</div>
              <div class="w-8 h-8 bg-gray-100 rounded-full flex items-center justify-center text-dark-900 hover:bg-primary hover:text-white transition-colors cursor-pointer">FB</div>
            </div>
          </div>
        </div>

        <div class="border-t border-gray-100 pt-8 text-center">
          <p class="text-xs text-gray-400">
            &copy; 2025 Cuervo Rosa Studio. Todos los derechos reservados.
          </p>
        </div>
      </div>
    </footer>

  </body>
</html>