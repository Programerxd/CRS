---
import '../styles/global.css';
import Header from '../components/Header'; // <--- Importamos el Header nuevo
import ShoppingCartDrawer from '../modules/store/components/ShoppingCartDrawer';
import CartSynchronizer from '../components/CartSynchronizer';
import Footer from '../components/Footer';
import SettingsLoader from '../components/SettingsLoader';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Cuervo Rosa Studio" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon (2).png" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Montserrat:wght@500;600;700;800&display=swap" rel="stylesheet">
    <title>{title}</title>
  </head>
  
  <body class="flex flex-col min-h-screen bg-white text-dark-600">
    <SettingsLoader client:only="react" />

    {/* El Header maneja toda la lógica del menú móvil */}
    <Header client:load />

    <main class="flex-grow">
      <slot />
    </main>

    <Footer client:visible />
    <ShoppingCartDrawer client:load />
    <CartSynchronizer client:only="react" />
  </body>
</html>